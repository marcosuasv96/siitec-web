---
import Layout from '../layouts/Layout.astro';
import CTA from '../components/CTA.astro';

// Datos de historia presentados como "Versiones del Sistema"
const roadmap = [
  { version: "v1.0", year: "2012", title: "Inicialización", desc: "Arranque de operaciones en Zapopan con enfoque en soporte de hardware." },
  { version: "v2.0", year: "2015", title: "Módulo de Seguridad", desc: "Integración de sistemas CCTV y certificación en videovigilancia IP." },
  { version: "v3.0", year: "2018", title: "Integración ContpaQi", desc: "Alianza estratégica para ofrecer soluciones contables y administrativas." },
  { version: "v4.0", year: "HOY", title: "Ecosistema Total", desc: "Consultoría integral 360° para infraestructura empresarial y gobierno." },
];

const valores = [
  { title: "Innovación", desc: "Nunca dejamos de actualizar nuestro 'hardware' mental.", color: "bg-blue-500" },
  { title: "Precisión", desc: "Diagnósticos exactos, sin adivinanzas.", color: "bg-siitec-accent" },
  { title: "Lealtad", desc: "Socios a largo plazo, no vendedores de una ocasión.", color: "bg-green-500" },
];
---

<Layout title="Nosotros | Siitec Smart">
    
    <section class="relative pt-32 pb-24 lg:pt-48 lg:pb-32 overflow-hidden bg-white dark:bg-[#0B1221] transition-colors duration-300">
        <div class="absolute inset-0 bg-[url('/grid.svg')] opacity-5 [mask-image:linear-gradient(to_bottom,black,transparent)]"></div>
        
        <div class="max-w-7xl mx-auto px-4 relative z-10">
            <div class="text-center max-w-4xl mx-auto">
                <p class="text-siitec-accent font-bold tracking-[0.3em] uppercase text-sm mb-4">Nuestra Identidad</p>
                <h1 class="text-5xl md:text-7xl font-bold text-gray-900 dark:text-white mb-8 tracking-tight leading-tight">
                    Arquitectos de <br/>
                    <span class="relative inline-block">
                        <span class="relative z-10 text-siitec-dark dark:text-siitec-light">Soluciones Digitales</span>
                        <span class="absolute bottom-2 left-0 w-full h-3 bg-siitec-accent/30 -skew-x-12 -z-0"></span>
                    </span>
                </h1>
                <p class="text-xl text-gray-600 dark:text-gray-400 leading-relaxed font-light">
                    En <strong>Siitec Smart</strong> transformamos la complejidad tecnológica en ventajas competitivas para tu negocio. Somos el brazo técnico que respalda a las empresas más exigentes de Jalisco.
                </p>
            </div>
        </div>
    </section>

    <section class="relative">
        <div class="h-64 md:h-96 w-full overflow-hidden">
            <img 
                src="https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?q=80&w=2070&auto=format&fit=crop" 
                alt="Edificio Corporativo Tech" 
                class="w-full h-full object-cover object-center filter brightness-75"
            />
        </div>
        
        <div class="max-w-6xl mx-auto px-4 -mt-16 relative z-20">
            <div class="bg-siitec-dark rounded-xl shadow-2xl p-8 grid grid-cols-2 md:grid-cols-4 gap-8 border-t-4 border-siitec-accent">
                <div class="text-center border-r border-white/10 last:border-0">
                    <span class="block text-4xl font-bold text-white mb-1">+12</span>
                    <span class="text-xs text-siitec-light uppercase tracking-widest">Años</span>
                </div>
                <div class="text-center border-r border-white/10 last:border-0">
                    <span class="block text-4xl font-bold text-white mb-1">+500</span>
                    <span class="text-xs text-siitec-light uppercase tracking-widest">Clientes</span>
                </div>
                <div class="text-center border-r border-white/10 last:border-0">
                    <span class="block text-4xl font-bold text-white mb-1">100%</span>
                    <span class="text-xs text-siitec-light uppercase tracking-widest">Certificado</span>
                </div>
                <div class="text-center">
                    <span class="block text-4xl font-bold text-white mb-1">24/7</span>
                    <span class="text-xs text-siitec-light uppercase tracking-widest">Soporte</span>
                </div>
            </div>
        </div>
    </section>

    <section class="py-24 bg-gray-50 dark:bg-[#0F172A] transition-colors duration-300">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex flex-col md:flex-row gap-16">
                <div class="md:w-1/3">
                    <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4 sticky top-32">Nuestra Evolución</h2>
                    <p class="text-gray-500 dark:text-gray-400 text-sm sticky top-44">
                        Cada etapa de nuestro crecimiento ha sido una actualización para servirte mejor.
                    </p>
                </div>

                <div class="md:w-2/3 space-y-8">
                    {roadmap.map((item, index) => (
                        <div class="group relative bg-white dark:bg-[#1E293B] p-8 rounded-2xl shadow-sm hover:shadow-lg transition-all duration-300 border-l-4 border-siitec-light hover:border-siitec-accent">
                            <div class="flex justify-between items-start mb-4">
                                <div>
                                    <span class="text-xs font-mono text-siitec-accent bg-siitec-accent/10 px-2 py-1 rounded mb-2 inline-block">
                                        Release {item.version}
                                    </span>
                                    <h3 class="text-xl font-bold text-gray-900 dark:text-white">{item.title}</h3>
                                </div>
                                <span class="text-4xl font-bold text-gray-100 dark:text-white/5">{item.year}</span>
                            </div>
                            <p class="text-gray-600 dark:text-gray-300 leading-relaxed">{item.desc}</p>
                        </div>
                    ))}
                </div>
            </div>
        </div>
    </section>

    <section class="py-24 bg-white dark:bg-[#0B1221] transition-colors duration-300">
        <div class="max-w-7xl mx-auto px-4">
            <div class="text-center mb-16">
                <h2 class="text-3xl font-bold text-gray-900 dark:text-white">Código Fuente (Valores)</h2>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                {valores.map(valor => (
                    <div class="relative p-8 rounded-2xl bg-gray-50 dark:bg-[#1E293B] overflow-hidden group">
                        <div class={`absolute top-0 right-0 w-16 h-16 ${valor.color} opacity-10 rounded-bl-full transition-transform group-hover:scale-150`}></div>
                        
                        <div class={`w-2 h-2 ${valor.color} rounded-full mb-6`}></div>
                        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">{valor.title}</h3>
                        <p class="text-gray-500 dark:text-gray-400 text-sm leading-relaxed">
                            {valor.desc}
                        </p>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <CTA />

</Layout>