---
import Layout from '../../layouts/Layout.astro';
import { getProductoById, getTipoCambio } from '../../lib/syscom';

const { id } = Astro.params;

// 1. OBTENER DATOS (En paralelo para velocidad)
const [producto, tipoCambio] = await Promise.all([
    getProductoById(id),
    getTipoCambio()
]);

// Si no existe, volver al catálogo
if (!producto) {
  return Astro.redirect('/catalogo');
}

// 2. PRECIO (Manejo de precio 0 o nulo)
const precioLista = parseFloat(producto.precio_lista || 0);
const precioMXN = precioLista > 0 
    ? (precioLista * tipoCambio).toLocaleString('es-MX', { style: 'currency', currency: 'MXN' }) 
    : "Cotizar";

// 3. IMÁGENES (Normalización)
const imagenes = producto.imagenes && producto.imagenes.length > 0 
    ? producto.imagenes 
    : [{ imagen: producto.img_portada }];
---

<Layout title={`${producto.modelo} | Siitec Smart`}>
    <section class="bg-[#0F172A] min-h-screen text-white pt-32 pb-20 relative overflow-hidden">
        
        <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-siitec-light/5 blur-[120px] rounded-full pointer-events-none"></div>
        
        <div class="max-w-7xl mx-auto px-4 relative z-10">
            
            <a href="/catalogo" class="inline-flex items-center gap-2 text-gray-400 hover:text-white mb-8 transition group">
                <span class="bg-white/5 p-2 rounded-full group-hover:bg-siitec-accent group-hover:text-siitec-dark transition">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
                </span>
                <span class="text-sm font-medium">Volver al catálogo</span>
            </a>

            <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 items-start">
                
                <div class="lg:col-span-7 space-y-6 sticky top-24">
                    <div class="bg-white rounded-2xl p-8 flex items-center justify-center h-[400px] md:h-[500px] border border-white/10 shadow-2xl relative overflow-hidden group">
                        <div class="absolute inset-0 bg-gradient-to-br from-gray-100 to-white -z-10"></div>
                        <img 
                            src={producto.img_portada} 
                            alt={producto.titulo} 
                            class="max-h-full max-w-full object-contain transition-transform duration-500 group-hover:scale-105" 
                            id="main-image"
                        />
                    </div>
                    
                    {imagenes.length > 1 && (
                        <div class="flex gap-3 overflow-x-auto pb-2 scrollbar-hide">
                            {imagenes.map((img) => (
                                <button 
                                    class="w-20 h-20 bg-white rounded-xl p-2 border-2 border-transparent hover:border-siitec-accent shrink-0 transition-all shadow-md" 
                                    onclick={`document.getElementById('main-image').src='${img.imagen}'`}
                                >
                                    <img src={img.imagen} class="w-full h-full object-contain" />
                                </button>
                            ))}
                        </div>
                    )}
                </div>

                <div class="lg:col-span-5">
                    
                    <div class="flex items-center justify-between mb-6">
                        <span class="bg-siitec-light/10 text-siitec-light px-3 py-1 rounded text-xs font-bold uppercase tracking-widest border border-siitec-light/20 shadow-[0_0_10px_rgba(92,164,216,0.2)]">
                            {producto.marca}
                        </span>
                        <span class="text-gray-500 text-xs font-mono border border-white/10 px-2 py-1 rounded">
                            MOD: {producto.modelo}
                        </span>
                    </div>

                    <h1 class="text-2xl md:text-3xl font-bold mb-6 leading-tight text-white">
                        {producto.titulo}
                    </h1>
                    
                    <div class="bg-[#1E293B]/80 backdrop-blur-md rounded-2xl p-6 border border-white/10 mb-8 shadow-lg">
                        <p class="text-xs text-gray-400 mb-1 uppercase tracking-wide">Precio de Lista</p>
                        <div class="flex items-end gap-2 mb-3">
                            {precioLista > 0 ? (
                                <>
                                    <span class="text-4xl font-bold text-siitec-accent">{precioMXN}</span>
                                    <span class="text-gray-400 mb-1 text-sm font-medium">MXN + IVA</span>
                                </>
                            ) : (
                                <span class="text-3xl font-bold text-white">Solicitar Cotización</span>
                            )}
                        </div>
                        
                        <div class="flex items-center gap-2 text-sm">
                            <span class={`w-2 h-2 rounded-full ${producto.total_existencia > 0 ? 'bg-green-500 animate-pulse' : 'bg-yellow-500'}`}></span>
                            <span class="text-gray-300">
                                {producto.total_existencia > 0 ? `Disponible en almacén (${producto.total_existencia} pzas)` : 'Consultar disponibilidad'}
                            </span>
                        </div>
                    </div>

                    <a 
                        href={`https://wa.me/523300000000?text=Hola,%20me%20interesa%20el%20modelo%20${producto.modelo}:%20${producto.titulo}`} 
                        target="_blank" 
                        class="w-full bg-gradient-to-r from-green-500 to-green-600 hover:from-green-400 hover:to-green-500 text-white font-bold py-4 px-6 rounded-xl flex items-center justify-center gap-3 shadow-[0_0_20px_rgba(34,197,94,0.3)] transition-all transform hover:-translate-y-1 mb-10 group"
                    >
                        <svg class="w-6 h-6 group-hover:animate-bounce" fill="currentColor" viewBox="0 0 24 24"><path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/></svg>
                        Pedir por WhatsApp
                    </a>

                    <div>
                        <h3 class="text-white font-bold text-lg mb-4 flex items-center gap-2">
                            <span class="w-1 h-6 bg-siitec-accent rounded-full"></span>
                            Descripción del Producto
                        </h3>
                        
                        <div class="syscom-html text-gray-300 text-sm leading-relaxed" set:html={producto.descripcion || '<p>Sin descripción disponible.</p>'}></div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</Layout>

<style is:global>
    /* CSS MÁGICO PARA LIMPIAR EL HTML FEO DE SYSCOM 
       Esto fuerza a que todo el texto sea legible sobre fondo oscuro
    */
    .syscom-html {
        font-family: 'Inter', sans-serif;
    }
    .syscom-html p, .syscom-html li, .syscom-html span, .syscom-html div, .syscom-html td {
        color: #cbd5e1 !important; /* Gris claro forzado */
        background-color: transparent !important; /* Quita fondos blancos */
        font-size: 0.95rem !important;
        line-height: 1.6 !important;
    }
    .syscom-html strong, .syscom-html b {
        color: #fff !important; /* Negritas en blanco puro */
    }
    .syscom-html ul {
        list-style-type: disc;
        padding-left: 1.5rem;
        margin-bottom: 1rem;
    }
    .syscom-html img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin: 1rem 0;
        opacity: 0.9;
    }
    /* Ocultar tablas viejas de Syscom que rompen el diseño */
    .syscom-html table {
        display: block;
        width: 100%;
        overflow-x: auto;
        border-collapse: collapse;
    }
</style>