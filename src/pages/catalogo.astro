---
import Layout from '../layouts/Layout.astro';
import { getProductos, getTipoCambio } from '../lib/syscom';

// Obtener parámetros
const page = Number(Astro.url.searchParams.get('page') || 1);
const search = Astro.url.searchParams.get('q') || 'computo';

// Ejecutar peticiones en paralelo (Productos y Dólar)
const [dataProductos, tipoCambio] = await Promise.all([
    getProductos(search, page),
    getTipoCambio()
]);

const { items: productos, paginas: totalPaginas } = dataProductos;

const makeLink = (category) => `?q=${category}&page=1`;

const categorias = [
    { label: 'Cómputo', query: 'laptop' },
    { label: 'Videovigilancia', query: 'cctv' },
    { label: 'Redes', query: 'access point' },
    { label: 'Acceso', query: 'biometrico' },
    { label: 'Audio', query: 'bocina' },
];
---

<Layout title={`Catálogo: ${search} | Siitec Smart`}>
    
    <div class="relative bg-[#0B1221] pt-32 pb-12 overflow-hidden border-b border-siitec-light/10">
        <div class="absolute inset-0 bg-[url('/grid.svg')] opacity-10"></div>
        <div class="relative z-10 text-center px-4">
            <h1 class="text-4xl md:text-5xl font-bold text-white mb-2">Inventario Digital</h1>
            <p class="text-siitec-light text-sm">Tipo de Cambio hoy: ${tipoCambio.toFixed(2)} MXN</p>
        </div>
    </div>

    <section class="bg-[#0F172A] min-h-screen py-10">
        <div class="max-w-7xl mx-auto px-4">

            <div class="flex flex-wrap justify-center gap-3 mb-10">
                {categorias.map(cat => (
                    <a href={makeLink(cat.query)} class={`px-5 py-2 rounded-full text-xs font-bold uppercase tracking-wider border transition-all ${search === cat.query ? 'bg-siitec-accent text-siitec-dark' : 'bg-[#0B1221] text-gray-400 border-white/10 hover:text-white'}`}>
                        {cat.label}
                    </a>
                ))}
            </div>

            {productos.length === 0 ? (
                <div class="text-center py-20 bg-white/5 rounded-xl text-gray-400">Sin resultados...</div>
            ) : (
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                    {productos.map((prod) => {
    // 1. CALCULAMOS EL PRECIO
    const precioUSD = parseFloat(prod.precio_lista || 0);
    
    // 2. VALIDAMOS SI TIENE PRECIO REAL
    const tienePrecio = precioUSD > 0;
    
    // 3. CONVERTIMOS A PESOS (Solo si tiene precio)
    const precioMXN = tienePrecio 
        ? (precioUSD * tipoCambio).toLocaleString('es-MX', { style: 'currency', currency: 'MXN' }) 
        : null;

    return (
        <div class="group relative bg-[#1E293B] rounded-xl overflow-hidden border border-white/5 hover:border-siitec-light/50 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg flex flex-col h-full">
            <a href={`/producto/${prod.producto_id}`} class="absolute inset-0 z-20"></a>

            <div class="h-56 bg-white p-4 relative flex items-center justify-center">
                <img src={prod.img_portada || '/logo.png'} alt={prod.titulo} class="max-h-full max-w-full object-contain group-hover:scale-105 transition" />
                <div class="absolute top-2 right-2 bg-siitec-dark text-white text-[0.6rem] px-2 py-0.5 rounded">{prod.marca}</div>
            </div>
            
            <div class="p-4 flex flex-col flex-grow relative z-10">
                <h3 class="text-gray-200 text-xs font-bold leading-relaxed line-clamp-2 mb-2 group-hover:text-siitec-light">{prod.titulo}</h3>
                
                <div class="mt-auto pt-3 border-t border-white/10">
                    <p class="text-[0.65rem] text-gray-500">Precio de Lista</p>
                    
                    {tienePrecio ? (
                        <div>
                            <span class="text-siitec-accent font-bold text-lg">{precioMXN}</span>
                            <span class="text-[0.65rem] text-gray-500 ml-1">MXN + IVA</span>
                        </div>
                    ) : (
                        // Si el precio es 0, mostramos esto:
                        <div class="flex items-center gap-2">
                            <span class="text-white font-bold text-sm bg-siitec-light/20 px-3 py-1 rounded border border-siitec-light/30">
                                Solicitar Cotización
                            </span>
                        </div>
                    )}
                </div>
            </div>
        </div>
    );
})}
                </div>
            )}

            <div class="mt-12 flex justify-center gap-4">
                {page > 1 && <a href={`?q=${search}&page=${page - 1}`} class="px-5 py-2 rounded bg-siitec-dark text-white text-sm hover:bg-siitec-light">Anterior</a>}
                <span class="px-4 py-2 text-gray-400 text-sm">Página {page} de {totalPaginas}</span>
                {page < totalPaginas && <a href={`?q=${search}&page=${page + 1}`} class="px-5 py-2 rounded bg-siitec-dark text-white text-sm hover:bg-siitec-light">Siguiente</a>}
            </div>
        </div>
    </section>
</Layout>