                })}
            </div>
        </div>
        
        <a href="/catalogo" class="block w-full text-center text-xs text-gray-400 hover:text-siitec-light border border-dashed border-gray-300 dark:border-white/10 py-2 rounded-lg transition-colors">
            Limpiar Filtros
        </a>

    </aside>
)}               

                    <div class="flex-1 transition-opacity duration-300">
                        {productos.length === 0 ? (
                            <div class="flex flex-col items-center justify-center h-64 bg-gray-50 dark:bg-[#1E293B] rounded-2xl border border-dashed border-gray-300 dark:border-white/10">
                                <svg class="w-12 h-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                <p class="text-gray-500 dark:text-gray-400 font-medium">No encontramos productos.</p>
                                <a href="/catalogo" class="mt-4 text-siitec-light text-sm font-bold hover:underline">Ver todo</a>
                            </div>
                        ) : (
                            <div class={`grid grid-cols-1 sm:grid-cols-2 ${showSidebar ? 'lg:grid-cols-3' : 'lg:grid-cols-4'} gap-6`}>
                                {productos.map((prod) => {
                                    const precios = prod.precios || {};
                                    const pListaUSD = parseFloat(precios.precio_lista || prod.precio_lista || 0);
                                    const pEspecialUSD = parseFloat(precios.precio_especial || 0);
                                    const pDescuentoUSD = parseFloat(precios.precio_descuento || 0);

                                    const costoBaseUSD = pDescuentoUSD > 0 ? pDescuentoUSD : (pEspecialUSD > 0 ? pEspecialUSD : pListaUSD);
                                    
                                    const precioVentaUSD = costoBaseUSD * MARGEN;

                                    const toMXN = (usd) => (usd * tipoCambio).toLocaleString('es-MX', { style: 'currency', currency: 'MXN', minimumFractionDigits: 2 });
                                    
                                    const precioFinalMXN = costoBaseUSD > 0 ? toMXN(precioVentaUSD) : null;
                                    const precioListaMXN = toMXN(pListaUSD); 

                                    return (
                                        <div class="group relative bg-white dark:bg-[#1E293B] rounded-xl overflow-hidden border border-gray-100 dark:border-white/5 hover:border-siitec-light/50 transition-all duration-300 hover:-translate-y-1 hover:shadow-xl dark:hover:shadow-[0_0_30px_rgba(92,164,216,0.1)] flex flex-col h-full">
                                            
                                            <a href={`/producto/${prod.producto_id}`} class="absolute inset-0 z-10"></a>
                                            
                                            {isHomeCatalog && (
                                                <div class="absolute top-0 left-0 bg-red-500 text-white text-[0.6rem] font-bold px-2 py-1 rounded-br-lg z-20 shadow-sm">
                                                    DESTACADO
                                                </div>
                                            )}

                                            <div class="h-48 bg-white p-4 relative flex items-center justify-center border-b border-gray-50 dark:border-white/5">
                                                <img src={prod.img_portada || '/logo.png'} alt={prod.titulo} class="max-h-full max-w-full object-contain group-hover:scale-105 transition duration-500" loading="lazy" />
                                                <div class="absolute top-2 right-2 bg-gray-100 dark:bg-siitec-dark/90 backdrop-blur text-gray-600 dark:text-white text-[0.55rem] px-2 py-0.5 rounded border border-gray-200 dark:border-white/20 font-bold uppercase truncate max-w-[100px]">
                                                    {prod.marca}
                                                </div>
                                            </div>

                                            <div class="p-4 flex flex-col flex-grow relative">
                                                <h3 class="text-gray-800 dark:text-gray-200 text-xs font-bold leading-relaxed line-clamp-2 mb-3 group-hover:text-siitec-dark dark:group-hover:text-siitec-light transition-colors">{prod.titulo}</h3>
                                                <div class="mt-auto pt-3 border-t border-gray-100 dark:border-white/10">
                                                    {costoBaseUSD > 0 ? (
                                                        <div>
                                                            {pListaUSD > precioVentaUSD && <p class="text-[0.6rem] text-gray-400 line-through mb-0.5">{precioListaMXN}</p>}
                                                            <div class="flex items-baseline gap-1">
                                                                <span class="text-siitec-dark dark:text-siitec-accent font-bold text-lg">{precioFinalMXN}</span>
                                                                <span class="text-[0.6rem] text-gray-400 font-medium">MXN</span>
                                                            </div>
                                                            <p class="text-[0.6rem] text-siitec-accent font-bold uppercase">+ IVA</p>
                                                        </div>
                                                    ) : (
                                                        <span class="text-siitec-dark dark:text-white font-bold text-xs bg-gray-100 dark:bg-siitec-light/20 px-3 py-1.5 rounded border border-gray-200 dark:border-siitec-light/30">Solicitar Cotizaci칩n</span>
                                                    )}
                                                </div>

                                                <div class="mt-4 flex gap-2 relative z-20">
                                                    <a href={`/producto/${prod.producto_id}`} class="flex-1 bg-gray-100 dark:bg-white/5 hover:bg-gray-200 text-gray-700 dark:text-gray-300 text-xs font-bold py-2 rounded text-center transition">
                                                        Ver detalles
                                                    </a>
                                                    
                                                    <button 
                                                        class="add-to-cart-btn bg-siitec-light/10 text-siitec-dark dark:text-siitec-light hover:bg-siitec-accent hover:text-siitec-dark border border-siitec-light/20 p-2 rounded transition-colors"
                                                        title="Agregar a cotizaci칩n"
                                                        data-id={prod.producto_id}
                                                        data-model={prod.modelo}
                                                        data-title={prod.titulo}
                                                        data-price={precioFinalMXN ? parseFloat(precioFinalMXN.replace(/[^0-9.]/g, '')) : 0}
                                                        data-image={prod.img_portada || '/logo.png'}
                                                    >
                                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    );
                                })}
                            </div>
                        )}

                        <div class="mt-12 flex justify-center items-center gap-4">
                            {page > 1 ? (
                                <a href={createFilterLink('page', (page - 1).toString())} class="px-4 py-2 rounded-lg border border-gray-200 dark:border-white/10 bg-white dark:bg-[#1E293B] text-gray-600 dark:text-gray-300 text-sm hover:border-siitec-light transition-colors">Anterior</a>
                            ) : (
                                <span class="px-4 py-2 rounded-lg border border-gray-100 dark:border-white/5 text-gray-300 dark:text-gray-700 text-sm cursor-not-allowed">Anterior</span>
                            )}
                            <span class="text-sm text-gray-500 dark:text-gray-400">P치g {page}</span>
                            {page < totalPaginas ? (
                                <a href={createFilterLink('page', (page + 1).toString())} class="px-4 py-2 rounded-lg border border-gray-200 dark:border-white/10 bg-white dark:bg-[#1E293B] text-gray-600 dark:text-gray-300 text-sm hover:border-siitec-light transition-colors">Siguiente</a>
                            ) : (
                                <span class="px-4 py-2 rounded-lg border border-gray-100 dark:border-white/5 text-gray-300 dark:text-gray-700 text-sm cursor-not-allowed">Siguiente</span>
                            )}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

</Layout>

<script is:inline>
    let searchTimeout;
    const searchInput = document.getElementById('search-input');
    const dynamicArea = document.getElementById('catalog-dynamic-area');
    const titleContainer = document.getElementById('catalog-header-title');
    const spinner = document.getElementById('search-spinner');

    if (searchInput) {
        searchInput.addEventListener('focus', () => searchInput.parentElement.classList.add('ring-2', 'ring-siitec-light/50'));
        searchInput.addEventListener('blur', () => searchInput.parentElement.classList.remove('ring-2', 'ring-siitec-light/50'));

        searchInput.addEventListener('input', (e) => {
            const query = e.target.value.trim();
            if (spinner) spinner.classList.remove('hidden');
            if (dynamicArea) dynamicArea.style.opacity = '0.5';

            clearTimeout(searchTimeout);

            searchTimeout = setTimeout(async () => {
                try {
                    const newUrl = new URL(window.location);
                    if (query === '') {
                        newUrl.searchParams.delete('q');
                        newUrl.searchParams.delete('marca');
                        newUrl.searchParams.delete('categoria');
                    } else {
                        newUrl.searchParams.set('q', query);
                    }
                    newUrl.searchParams.delete('page');
                    window.history.pushState({}, '', newUrl);

                    const res = await fetch(newUrl.href);
                    const text = await res.text();
                    const parser = new DOMParser();
                    const doc = parser.parseFromString(text, 'text/html');
                    
                    const newDynamic = doc.getElementById('catalog-dynamic-area').innerHTML;
                    if (dynamicArea) dynamicArea.innerHTML = newDynamic;

                    const newTitle = doc.getElementById('catalog-header-title').innerHTML;
                    if (titleContainer && newTitle) titleContainer.innerHTML = newTitle;

                } catch (error) {
                    console.error('Error:', error);
                } finally {
                    if (spinner) spinner.classList.add('hidden');
                    if (dynamicArea) dynamicArea.style.opacity = '1';
                    searchInput.focus();
                }
            }, 600);
        });
    }

    document.addEventListener('click', (e) => {
        const btn = e.target.closest('.add-to-cart-btn');
        
        if (btn) {
            e.preventDefault(); 
            e.stopPropagation(); 
            
            const product = {
                id: btn.dataset.id,
                model: btn.dataset.model,
                title: btn.dataset.title,
                price: parseFloat(btn.dataset.price) || 0,
                image: btn.dataset.image
            };

            const event = new CustomEvent('add-to-cart', { detail: product });
            document.dispatchEvent(event);
        }
    });
</script>

