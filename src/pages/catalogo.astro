---
import Layout from '../layouts/Layout.astro';
import { getProductos, getTipoCambio } from '../lib/syscom';

// Obtener parámetros
const page = Number(Astro.url.searchParams.get('page') || 1);
const search = Astro.url.searchParams.get('q') || 'computo';

// Ejecutar peticiones en paralelo
const [dataProductos, tipoCambio] = await Promise.all([
    getProductos(search, page),
    getTipoCambio()
]);

// Syscom a veces devuelve 'productos' y a veces 'items', aseguramos que lea cualquiera
const productos = dataProductos.items || dataProductos.productos || [];
const totalPaginas = dataProductos.paginas || 1;

const makeLink = (category) => `?q=${category}&page=1`;

const categorias = [
    { label: 'Cómputo', query: 'laptop' },
    { label: 'Videovigilancia', query: 'cctv' },
    { label: 'Redes', query: 'access point' },
    { label: 'Acceso', query: 'biometrico' },
    { label: 'Audio', query: 'bocina' },
];
---

<Layout title={`Catálogo: ${search} | Siitec Smart`}>
    
    <div class="relative bg-white dark:bg-[#0B1221] pt-32 pb-12 overflow-hidden border-b border-gray-200 dark:border-siitec-light/10 transition-colors duration-300">
        <div class="absolute inset-0 bg-[url('/grid.svg')] opacity-5 dark:opacity-10 [mask-image:linear-gradient(180deg,white,transparent)]"></div>
        <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-siitec-light/10 blur-[120px] rounded-full pointer-events-none"></div>
        
        <div class="relative z-10 text-center px-4">
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-2 tracking-tight transition-colors">
                Inventario <span class="text-transparent bg-clip-text bg-gradient-to-r from-siitec-dark to-siitec-light dark:from-siitec-light dark:to-siitec-accent">Digital</span>
            </h1>
            <p class="text-gray-500 dark:text-siitec-light text-sm font-medium transition-colors">
                Tipo de Cambio hoy: <span class="font-bold">${tipoCambio.toFixed(2)} MXN</span>
            </p>
        </div>
    </div>

    <section class="bg-gray-50 dark:bg-[#0F172A] min-h-screen py-10 transition-colors duration-300">
        <div class="max-w-7xl mx-auto px-4">

            <div class="flex flex-wrap justify-center gap-3 mb-10">
                {categorias.map(cat => (
                    <a 
                        href={makeLink(cat.query)} 
                        class={`px-5 py-2 rounded-full text-xs font-bold uppercase tracking-wider border transition-all duration-300
                        ${search === cat.query 
                            ? 'bg-siitec-accent text-siitec-dark border-siitec-accent shadow-lg' 
                            : 'bg-white dark:bg-[#0B1221] text-gray-600 dark:text-gray-400 border-gray-200 dark:border-white/10 hover:border-siitec-light hover:text-siitec-dark dark:hover:text-white'}`}
                    >
                        {cat.label}
                    </a>
                ))}
            </div>

            {productos.length === 0 ? (
                <div class="text-center py-20 bg-white dark:bg-white/5 rounded-xl border border-gray-200 dark:border-white/5 text-gray-500 dark:text-gray-400 shadow-sm">
                    Sin resultados o cargando...
                </div>
            ) : (
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                    {productos.map((prod) => {
                        // --- CORRECCIÓN DE PRECIO AQUÍ ---
                        // Accedemos a prod.precios.precio_lista
                        const precioRaw = prod.precios?.precio_lista || prod.precio_lista || 0;
                        const precioUSD = parseFloat(precioRaw);
                        
                        const tienePrecio = precioUSD > 0;
                        const precioMXN = tienePrecio 
                            ? (precioUSD * tipoCambio).toLocaleString('es-MX', { style: 'currency', currency: 'MXN' }) 
                            : null;

                        return (
                            <div class="group relative bg-white dark:bg-[#1E293B] rounded-xl overflow-hidden border border-gray-100 dark:border-white/5 hover:border-siitec-light/50 transition-all duration-300 hover:-translate-y-1 hover:shadow-xl dark:hover:shadow-[0_0_30px_rgba(92,164,216,0.1)] flex flex-col h-full">
                                <a href={`/producto/${prod.producto_id}`} class="absolute inset-0 z-20"></a>

                                <div class="h-56 bg-white p-4 relative flex items-center justify-center border-b border-gray-50 dark:border-white/5">
                                    <img src={prod.img_portada || '/logo.png'} alt={prod.titulo} class="max-h-full max-w-full object-contain group-hover:scale-105 transition duration-500" loading="lazy" />
                                    <div class="absolute top-3 right-3 bg-gray-100 dark:bg-siitec-dark/90 backdrop-blur text-gray-600 dark:text-white text-[0.6rem] px-2 py-1 rounded border border-gray-200 dark:border-white/20 shadow-sm font-bold uppercase">
                                        {prod.marca}
                                    </div>
                                </div>
                                
                                <div class="p-5 flex flex-col flex-grow relative z-10">
                                    <h3 class="text-gray-800 dark:text-gray-200 text-xs font-bold leading-relaxed line-clamp-2 mb-3 group-hover:text-siitec-dark dark:group-hover:text-siitec-light transition-colors">
                                        {prod.titulo}
                                    </h3>
                                    
                                    <div class="mt-auto pt-3 border-t border-gray-100 dark:border-white/10">
                                        <p class="text-[0.65rem] text-gray-400 dark:text-gray-500 uppercase tracking-wide mb-1">Precio de Lista</p>
                                        
                                        {tienePrecio ? (
                                            <div class="flex items-baseline gap-1">
                                                <span class="text-siitec-dark dark:text-siitec-accent font-bold text-lg">{precioMXN}</span>
                                                <span class="text-[0.65rem] text-gray-400 font-medium">MXN + IVA</span>
                                            </div>
                                        ) : (
                                            <div class="flex items-center gap-2">
                                                <span class="text-siitec-dark dark:text-white font-bold text-xs bg-gray-100 dark:bg-siitec-light/20 px-3 py-1.5 rounded border border-gray-200 dark:border-siitec-light/30">
                                                    Solicitar Cotización
                                                </span>
                                            </div>
                                        )}
                                    </div>
                                </div>
                            </div>
                        );
                    })}
                </div>
            )}

            <div class="mt-12 flex justify-center items-center gap-4">
                {page > 1 ? (
                    <a href={`?q=${search}&page=${page - 1}`} class="px-5 py-2.5 rounded-lg border border-gray-300 dark:border-siitec-light/30 bg-white dark:bg-transparent text-gray-600 dark:text-siitec-light font-bold text-sm hover:bg-gray-50 dark:hover:bg-siitec-light dark:hover:text-siitec-dark transition-all shadow-sm">
                        Anterior
                    </a>
                ) : (
                    <span class="px-5 py-2.5 rounded-lg border border-gray-200 dark:border-white/5 text-gray-300 dark:text-gray-600 text-sm cursor-not-allowed">
                        Anterior
                    </span>
                )}

                <span class="px-4 py-2 text-gray-500 dark:text-gray-400 text-sm font-medium">
                    Página <span class="text-gray-900 dark:text-white font-bold">{page}</span> de {totalPaginas}
                </span>

                {page < totalPaginas ? (
                    <a href={`?q=${search}&page=${page + 1}`} class="px-5 py-2.5 rounded-lg border border-gray-300 dark:border-siitec-light/30 bg-white dark:bg-transparent text-gray-600 dark:text-siitec-light font-bold text-sm hover:bg-gray-50 dark:hover:bg-siitec-light dark:hover:text-siitec-dark transition-all shadow-sm">
                        Siguiente
                    </a>
                ) : (
                    <span class="px-5 py-2.5 rounded-lg border border-gray-200 dark:border-white/5 text-gray-300 dark:text-gray-600 text-sm cursor-not-allowed">
                        Siguiente
                    </span>
                )}
            </div>
        </div>
    </section>
</Layout>