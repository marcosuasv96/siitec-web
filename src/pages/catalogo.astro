---
import Layout from '../layouts/Layout.astro';
import { getProductos, getTipoCambio } from '../lib/syscom';

const url = Astro.url;
const page = Number(url.searchParams.get('page') || 1);
const qParam = url.searchParams.get('q');
const search = qParam || ''; 
const marcaFilter = url.searchParams.get('marca') || '';
const catFilter = url.searchParams.get('categoria') || '';
const isHomeCatalog = !search && !marcaFilter && !catFilter;
const showSidebar = !isHomeCatalog; 

const [dataProductos, tipoCambio] = await Promise.all([
    getProductos(search, page, marcaFilter, catFilter),
    getTipoCambio()
]);

const productos = dataProductos.items || dataProductos.productos || [];
const totalPaginas = dataProductos.paginas || 1;

const marcasDisponibles = showSidebar ? [...new Set(productos.map(p => p.marca))].slice(0, 10) : [];
const categoriasDisponibles = showSidebar ? [...new Set(productos.flatMap(p => p.categorias.map(c => c.nombre)))].slice(0, 8) : [];

const createFilterLink = (key, value) => {
    const newUrl = new URL(url);
    if (value) newUrl.searchParams.set(key, value);
    else newUrl.searchParams.delete(key);
    newUrl.searchParams.set('page', '1');
    if (qParam) newUrl.searchParams.set('q', qParam);
    return newUrl.pathname + newUrl.search;
};

const MARGEN = 1.676; 
---

<Layout title={search ? `Resultados: ${search}` : 'Cat치logo | Siitec Smart'}>
    
    <div class="relative bg-white dark:bg-[#0B1221] pt-32 pb-8 overflow-hidden border-b border-gray-200 dark:border-siitec-light/10 transition-colors duration-300">
        <div class="absolute inset-0 bg-[url('/grid.svg')] opacity-5 dark:opacity-10 pointer-events-none"></div>
        
        <div class="relative z-10 text-center px-4 max-w-4xl mx-auto">
            
            <div id="catalog-header-title">
                <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-2">
                    {isHomeCatalog ? (
                        <span class="flex items-center justify-center gap-2">
                            游댠 Productos <span class="text-transparent bg-clip-text bg-gradient-to-r from-siitec-dark to-siitec-accent">M치s Vendidos</span>
                        </span>
                    ) : (
                        <span>B칰squeda: <span class="text-siitec-accent">"{search}"</span></span>
                    )}
                </h1>
                
                <p class="text-sm text-gray-500 dark:text-gray-400 font-mono mb-6">
                    Tipo de Cambio: <span class="font-bold text-siitec-dark dark:text-white">${tipoCambio.toFixed(2)} MXN</span>
                </p>
            </div>

            <form id="search-form" onsubmit="event.preventDefault();" class="relative w-full group mb-4">
                <div class="relative flex items-center bg-gray-50 dark:bg-[#151f32] border border-gray-200 dark:border-white/10 rounded-xl shadow-inner overflow-hidden focus-within:ring-2 focus-within:ring-siitec-light/50 transition-all">
                    <div class="pl-4 text-gray-400">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                    </div>
                    
                    <input 
                        id="search-input"
                        type="text" 
                        name="q" 
                        placeholder="Buscar producto, marca o modelo..." 
                        class="w-full py-3 px-4 bg-transparent border-none focus:ring-0 text-gray-700 dark:text-white placeholder-gray-400 outline-none"
                        value={qParam || ''} 
                        autocomplete="off"
                    />
                    
                    <div id="search-spinner" class="hidden pr-4">
                        <svg class="animate-spin h-5 w-5 text-siitec-accent" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
