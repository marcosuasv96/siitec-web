        <div class="bg-gray-50 dark:bg-[#1E293B] rounded-xl p-5 border border-gray-200 dark:border-white/5">
            <h3 class="text-sm font-bold text-gray-900 dark:text-white uppercase tracking-wider mb-4 flex items-center gap-2">
                <svg class="w-4 h-4 text-siitec-light" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"></path></svg>
                Categor칤as
            </h3>
            <div class="space-y-2">
                {categoriasDisponibles.map(cat => {
                    const isActive = cat === catFilter;
                    return (
                        <a 
                            href={createFilterLink('categoria', isActive ? '' : cat)}
                            class={`flex items-center justify-between text-xs px-3 py-2 rounded-lg transition-all duration-200 group
                            ${isActive 
                                ? 'bg-siitec-light text-white font-bold shadow-md hover:bg-red-500' 
                                : 'text-gray-600 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-white/10 hover:pl-4'}`}
                            title={isActive ? "Clic para quitar filtro" : "Filtrar por esta categor칤a"}
                        >
                            <span class="truncate">{cat}</span>
                            {isActive ? (
                                <svg class="w-3 h-3 flex-shrink-0 transition-transform group-hover:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                </svg>
                            ) : (
