---
import Layout from '../layouts/Layout.astro';
import { getProductos, getTipoCambio } from '../lib/syscom';

const page = Number(Astro.url.searchParams.get('page') || 1);
const search = Astro.url.searchParams.get('q') || 'computo';

const [dataProductos, tipoCambio] = await Promise.all([
    getProductos(search, page),
    getTipoCambio()
]);

const productos = dataProductos.items || dataProductos.productos || [];
const totalPaginas = dataProductos.paginas || 1;
const makeLink = (category) => `?q=${category}&page=1`;
const categorias = [
    { label: 'C칩mputo', query: 'laptop' },
    { label: 'Videovigilancia', query: 'cctv' },
    { label: 'Redes', query: 'access point' },
    { label: 'Acceso', query: 'biometrico' },
    { label: 'Audio', query: 'bocina' },
];

const IVA = 1.16;
const MARGEN = 1.10; // 10% Ganancia
---

<Layout title={`Cat치logo: ${search} | Siitec Smart`}>
    <div class="relative bg-white dark:bg-[#0B1221] pt-32 pb-12 overflow-hidden border-b border-gray-200 dark:border-siitec-light/10 transition-colors duration-300">
        <div class="relative z-10 text-center px-4">
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-2">Inventario Digital</h1>
            <p class="text-gray-500 dark:text-siitec-light text-sm">TC: ${tipoCambio.toFixed(2)} MXN</p>
        </div>
    </div>

    <section class="bg-gray-50 dark:bg-[#0F172A] min-h-screen py-10 transition-colors duration-300">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex flex-wrap justify-center gap-3 mb-10">
                {categorias.map(cat => (
                    <a href={makeLink(cat.query)} class={`px-5 py-2 rounded-full text-xs font-bold uppercase tracking-wider border transition-all ${search === cat.query ? 'bg-siitec-accent text-siitec-dark' : 'bg-white dark:bg-[#0B1221] text-gray-600 dark:text-gray-400 border-gray-200 dark:border-white/10'}`}>{cat.label}</a>
                ))}
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                {productos.map((prod) => {
                    const precios = prod.precios || {};
                    const pListaUSD = parseFloat(precios.precio_lista || prod.precio_lista || 0);
                    const pEspecialUSD = parseFloat(precios.precio_especial || 0);
                    const pDescuentoUSD = parseFloat(precios.precio_descuento || 0);

                    // Costo Base (El m치s barato que nos da Syscom)
                    const costoBaseUSD = pDescuentoUSD > 0 ? pDescuentoUSD : (pEspecialUSD > 0 ? pEspecialUSD : pListaUSD);
                    
                    // Precio Venta (Costo + 10%)
                    const precioVentaUSD = costoBaseUSD * MARGEN;

                    const toMXN = (usd) => (usd * tipoCambio * IVA).toLocaleString('es-MX', { style: 'currency', currency: 'MXN', minimumFractionDigits: 2 });
                    
                    const precioFinalMXN = costoBaseUSD > 0 ? toMXN(precioVentaUSD) : null;
                    const precioListaMXN = toMXN(pListaUSD); // Precio lista sin margen extra para referencia

                    return (
                        <div class="group relative bg-white dark:bg-[#1E293B] rounded-xl overflow-hidden border border-gray-100 dark:border-white/5 hover:border-siitec-light/50 transition-all hover:-translate-y-1 hover:shadow-xl flex flex-col h-full">
                            <a href={`/producto/${prod.producto_id}`} class="absolute inset-0 z-20"></a>
                            <div class="h-56 bg-white p-4 relative flex items-center justify-center border-b border-gray-50 dark:border-white/5">
                                <img src={prod.img_portada || '/logo.png'} alt={prod.titulo} class="max-h-full max-w-full object-contain group-hover:scale-105 transition" />
                            </div>
                            <div class="p-5 flex flex-col flex-grow relative z-10">
                                <h3 class="text-gray-800 dark:text-gray-200 text-xs font-bold line-clamp-2 mb-3">{prod.titulo}</h3>
                                <div class="mt-auto pt-3 border-t border-gray-100 dark:border-white/10">
                                    {costoBaseUSD > 0 ? (
                                        <div>
                                            {pListaUSD > precioVentaUSD && <p class="text-[0.6rem] text-gray-400 line-through mb-0.5">{precioListaMXN}</p>}
                                            <div class="flex items-baseline gap-1">
                                                <span class="text-siitec-dark dark:text-siitec-accent font-bold text-lg">{precioFinalMXN}</span>
                                                <span class="text-[0.6rem] text-gray-400 font-medium">MXN</span>
                                            </div>
                                            <p class="text-[0.6rem] text-gray-400 font-medium mt-0.5">IVA Incluido</p>
                                        </div>
                                    ) : (
                                        <span class="text-siitec-dark dark:text-white font-bold text-xs bg-gray-100 dark:bg-siitec-light/20 px-3 py-1.5 rounded">Solicitar Cotizaci칩n</span>
                                    )}
                                </div>
                            </div>
                        </div>
                    );
                })}
            </div>
            
            </div>
    </section>
</Layout>