---
// src/components/Footer.astro
const currentYear = new Date().getFullYear();

// Enlaces de redes sociales
const socialLinks = [
  { 
    name: "Facebook", 
    url: "https://facebook.com", 
    icon: "M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z" 
  },
  { 
    name: "Instagram", 
    url: "https://instagram.com", 
    icon: "M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37zm1.5-4.87h.01M7.5 21h9a4.5 4.5 0 004.5-4.5v-9A4.5 4.5 0 0016.5 3h-9A4.5 4.5 0 003 7.5v9A4.5 4.5 0 007.5 21z" 
  }
];
---

<footer class="relative bg-[#0B1221] text-white pt-20 pb-10 overflow-hidden border-t border-white/5">
    
    <div class="absolute top-0 left-0 w-full h-[2px] bg-gradient-to-r from-siitec-dark via-siitec-light to-siitec-accent opacity-70"></div>
    
    <div class="absolute inset-0 w-full h-full opacity-[0.03]" 
         style="background-image: linear-gradient(#ffffff 1px, transparent 1px), linear-gradient(90deg, #ffffff 1px, transparent 1px); background-size: 30px 30px;">
    </div>

    <div class="absolute bottom-0 right-0 w-96 h-96 bg-siitec-light/10 blur-[100px] rounded-full pointer-events-none"></div>

    <div class="max-w-7xl mx-auto px-4 relative z-10">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-16">
            
            <div class="space-y-6">
                <div class="flex flex-col">
                    <span class="font-bold text-2xl text-white tracking-wide">SIITEC</span>
                    <span class="text-[0.6rem] uppercase tracking-[0.3em] text-siitec-accent font-bold">Smart Technology</span>
                </div>
                
                <p class="text-gray-400 text-sm leading-relaxed">
                    Transformamos empresas a través de soluciones tecnológicas integrales. Seguridad, infraestructura y consultoría experta.
                </p>

                <div class="flex gap-4 pt-2">
                    {socialLinks.map(social => (
                        <a href={social.url} target="_blank" rel="noopener noreferrer" 
                           class="w-10 h-10 rounded-lg bg-white/5 border border-white/10 flex items-center justify-center text-gray-400 hover:text-white hover:bg-siitec-light hover:border-siitec-light transition-all duration-300 group hover:shadow-[0_0_15px_rgba(92,164,216,0.6)]">
                            <svg class="w-5 h-5 fill-current transition-transform group-hover:scale-110" viewBox="0 0 24 24" stroke="none">
                                <path d={social.icon}></path>
                            </svg>
                        </a>
                    ))}
                </div>
            </div>

            <div>
                <h3 class="font-bold text-lg mb-6 flex items-center gap-2">
                    <span class="w-1 h-4 bg-siitec-accent rounded-full"></span> Navegación
                </h3>
                <ul class="space-y-3">
                    <li><a href="/" class="text-gray-400 hover:text-siitec-light transition-colors text-sm">Inicio</a></li>
                    <li><a href="/nosotros" class="text-gray-400 hover:text-siitec-light transition-colors text-sm">Nosotros</a></li>
                    <li><a href="/servicios" class="text-gray-400 hover:text-siitec-light transition-colors text-sm">Servicios</a></li>
                    <li><a href="/catalogo" class="text-gray-400 hover:text-siitec-light transition-colors text-sm">Catálogo de Productos</a></li>
                </ul>
            </div>

            <div>
                <h3 class="font-bold text-lg mb-6 flex items-center gap-2">
                    <span class="w-1 h-4 bg-siitec-light rounded-full"></span> Soluciones
                </h3>
                <ul class="space-y-3">
                    <li class="text-gray-400 text-sm hover:text-white cursor-default transition-colors">Sistemas ContpaQi</li>
                    <li class="text-gray-400 text-sm hover:text-white cursor-default transition-colors">Cámaras de Seguridad (CCTV)</li>
                    <li class="text-gray-400 text-sm hover:text-white cursor-default transition-colors">Servidores y Redes</li>
                    <li class="text-gray-400 text-sm hover:text-white cursor-default transition-colors">Venta de Hardware</li>
                </ul>
            </div>

            <div>
                <h3 class="font-bold text-lg mb-6 flex items-center gap-2">
                    <span class="w-1 h-4 bg-white rounded-full"></span> Contacto
                </h3>
                <ul class="space-y-4">
                    <li class="flex items-start gap-3 text-gray-400 text-sm group">
                        <svg class="w-5 h-5 text-siitec-accent mt-0.5 group-hover:text-white transition" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                        <span class="group-hover:text-white transition-colors">Zapopan, Jalisco<br>México</span>
                    </li>
                    <li class="flex items-center gap-3 text-gray-400 text-sm group">
                        <svg class="w-5 h-5 text-siitec-accent group-hover:text-white transition" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                        <a href="mailto:ventas@siitecsmart.com" class="hover:text-white transition-colors">ventas@siitecsmart.com</a>
                    </li>
                    <li class="flex items-center gap-3 text-gray-400 text-sm group">
                        <svg class="w-5 h-5 text-siitec-accent group-hover:text-white transition" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
                        <a href="tel:+523300000000" class="hover:text-white transition-colors">(33) 0000 0000</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="border-t border-white/5 relative z-10">
        <div class="max-w-7xl mx-auto px-4 py-6 flex flex-col md:flex-row justify-between items-center gap-4">
            <p class="text-xs text-gray-500">
                &copy; {currentYear} Siitec Smart Tech. Todos los derechos reservados.
            </p>
            
            <div class="flex items-center gap-2 px-3 py-1 bg-white/5 rounded-full border border-white/5">
                <span class="w-1.5 h-1.5 rounded-full bg-green-500 animate-pulse"></span>
                <span class="text-[0.6rem] text-gray-400 font-mono tracking-wider">SYSTEM STATUS: ONLINE</span>
            </div>
        </div>
    </div>
</footer>