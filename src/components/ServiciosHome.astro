---
// src/components/ServiciosHome.astro

const servicios = [
    {
        titulo: "Licenciamiento CONTPAQi",
        desc: "Optimiza tu núcleo administrativo. Instalación, timbrado ilimitado y soporte técnico certificado.",
        // Icono SVG: Documento con engranaje (Tech Admin)
        path: "M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z M15 12a3 3 0 11-6 0 3 3 0 016 0z",
        link: "/servicios",
    },
    {
        titulo: "Seguridad IA & CCTV",
        desc: "Vigilancia de última generación con reconocimiento facial, cruce de línea y monitoreo remoto.",
        // Icono SVG: Escudo con Ojo Digital (Cyber Security)
        path: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z",
        link: "/servicios",
    },
    {
        titulo: "Infraestructura & Hardware",
        desc: "Servidores de alto rendimiento, redes mesh y workstations empresariales (HP, Dell, Lenovo).",
        // Icono SVG: Red de servidores / Nodos (Infrastructure)
        path: "M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10",
        link: "/catalogo",
    },
];
---

<section class="py-24 bg-white relative overflow-hidden">
    <div
        class="absolute inset-0 bg-[url('/grid.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))] opacity-10"
    >
    </div>

    <div
        class="absolute top-0 right-0 w-[600px] h-[600px] bg-siitec-light/5 blur-[100px] rounded-full pointer-events-none"
    >
    </div>
    <div
        class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-siitec-accent/5 blur-[80px] rounded-full pointer-events-none"
    >
    </div>

    <div class="max-w-7xl mx-auto px-4 relative z-10">
        <div class="text-center mb-20 max-w-3xl mx-auto">
            <div
                class="inline-flex items-center gap-2 px-3 py-1 rounded-full border border-siitec-dark/10 bg-siitec-dark/5 mb-4"
            >
                <span class="relative flex h-2 w-2">
                    <span
                        class="animate-ping absolute inline-flex h-full w-full rounded-full bg-siitec-accent opacity-75"
                    ></span>
                    <span
                        class="relative inline-flex rounded-full h-2 w-2 bg-siitec-accent"
                    ></span>
                </span>
                <span
                    class="text-xs font-bold uppercase tracking-widest text-siitec-dark/70"
                    >Arquitectura Digital</span
                >
            </div>
            <h2
                class="text-4xl md:text-5xl font-bold text-siitec-dark mb-4 tracking-tight"
            >
                Ecosistema <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-siitec-light to-siitec-dark"
                    >High-Tech</span>
            </h2>
            <p class="text-gray-500 text-lg font-light">
                Integramos las piezas clave para la transformación digital de tu
                negocio.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {
                servicios.map((serv) => (
                    <div class="group relative p-1 rounded-2xl transition-all duration-500 hover:-translate-y-2">
                        <div class="absolute inset-0 bg-gradient-to-r from-gray-100 via-gray-200 to-gray-100 rounded-2xl transition-all duration-500 group-hover:from-siitec-light group-hover:via-siitec-accent group-hover:to-siitec-light opacity-50 group-hover:opacity-100 blur-[1px] group-hover:blur-[2px]" />

                        <div class="relative h-full bg-white rounded-xl p-8 overflow-hidden">
                            <div class="absolute inset-0 opacity-[0.03] bg-[radial-gradient(#1B315E_1px,transparent_1px)] [background-size:16px_16px]" />

                            <div class="absolute top-0 right-0 p-4 opacity-50">
                                <svg
                                    width="20"
                                    height="20"
                                    viewBox="0 0 20 20"
                                    fill="none"
                                    class="text-gray-300 group-hover:text-siitec-accent transition-colors"
                                >
                                    <path
                                        d="M1 1H5M1 1V5"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                    />
                                    <path
                                        d="M19 1H15M19 1V5"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                    />
                                </svg>
                            </div>

                            <div class="relative w-16 h-16 mb-6">
                                <div class="absolute inset-0 bg-siitec-light/10 rounded-xl transform rotate-3 group-hover:rotate-6 transition-transform duration-300" />
                                <div class="absolute inset-0 bg-siitec-dark/5 rounded-xl transform -rotate-3 group-hover:-rotate-6 transition-transform duration-300" />

                                <div class="relative w-full h-full bg-white border border-gray-100 rounded-xl flex items-center justify-center text-siitec-dark group-hover:text-siitec-light group-hover:border-siitec-light/30 transition-all shadow-sm">
                                    <svg
                                        class="w-8 h-8"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="1.5"
                                            d={serv.path}
                                        />
                                    </svg>
                                </div>
                            </div>

                            <h3 class="text-xl font-bold text-siitec-dark mb-3 group-hover:text-siitec-light transition-colors">
                                {serv.titulo}
                            </h3>
                            <p class="text-gray-500 text-sm leading-relaxed mb-8 font-light border-l-2 border-transparent group-hover:border-siitec-accent pl-0 group-hover:pl-3 transition-all duration-300">
                                {serv.desc}
                            </p>

                            <a
                                href={serv.link}
                                class="inline-flex items-center gap-2 text-xs font-bold uppercase tracking-widest text-siitec-dark group/link"
                            >
                                <span class="border-b border-siitec-dark/30 group-hover/link:border-siitec-accent transition-colors pb-0.5">
                                    Explorar Solución
                                </span>
                                <svg
                                    class="w-4 h-4 transform group-hover/link:translate-x-1 transition-transform text-siitec-accent"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M14 5l7 7m0 0l-7 7m7-7H3"
                                    />
                                </svg>
                            </a>
                        </div>
                    </div>
                ))
            }
        </div>
        <div class="mt-20 text-center">
            <a
                href="/catalogo"
                class="relative inline-flex items-center gap-3 px-10 py-4 font-bold text-white transition-all duration-500 bg-siitec-dark rounded-xl group hover:shadow-[0_0_30px_rgba(27,49,94,0.6)] overflow-hidden ring-1 ring-white/10 hover:ring-siitec-light/50"
            >
                <div
                    class="absolute inset-0 bg-gradient-to-r from-siitec-dark via-[#233b6e] to-siitec-dark opacity-100 transition-all duration-500 group-hover:scale-110"
                >
                </div>

                <div
                    class="absolute -inset-full top-0 block h-full w-1/2 -skew-x-12 bg-gradient-to-r from-transparent to-white opacity-20 group-hover:animate-[shine_0.75s_infinite]"
                >
                </div>

                <span
                    class="relative z-10 tracking-[0.2em] uppercase text-xs md:text-sm font-bold text-gray-200 group-hover:text-white transition-colors"
                >
                    Ver Catálogo Completo
                </span>

                <svg
                    class="w-5 h-5 relative z-10 transform group-hover:translate-x-1 transition-transform duration-300 text-siitec-accent"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>

                <div
                    class="absolute bottom-0 left-0 h-[3px] w-full bg-gradient-to-r from-transparent via-siitec-accent to-transparent transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 ease-out"
                >
                </div>
            </a>
        </div>
    </div>
</section>
