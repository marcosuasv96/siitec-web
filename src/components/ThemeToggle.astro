    <span class="sr-only">Cambiar tema</span>
</button>

<script is:inline>
    // Función autoejecutable para aislar el código
    (function() {
        // --- GUARDIA DE SEGURIDAD ---
        // Si este script ya corrió una vez, detenemos la segunda ejecución.
        if (window.themeToggleInitialized) return;
        window.themeToggleInitialized = true;

        // Función para actualizar TODOS los botones a la vez (Escritorio y Móvil)
        function updateThemeUI(isDark) {
            const buttons = document.querySelectorAll('.theme-toggle-btn');
            
            buttons.forEach(btn => {
                const sunIcon = btn.querySelector('.sun-icon');
                const moonIcon = btn.querySelector('.moon-icon');

                if (isDark) {
                    // Si es oscuro, mostrar sol, ocultar luna
                    sunIcon.classList.remove('hidden');
                    moonIcon.classList.add('hidden');
                } else {
                    // Si es claro, ocultar sol, mostrar luna
                    sunIcon.classList.add('hidden');
                    moonIcon.classList.remove('hidden');
                }
            });
        }

        // Lógica principal al hacer clic
        function handleToggleClick(e) {
            e.preventDefault(); // Prevenir comportamientos extraños
            
            // Verificar estado actual
            const isDark = document.documentElement.classList.contains('dark');
            
            // Invertir estado
            if (isDark) {
                document.documentElement.classList.remove('dark');
                localStorage.setItem('color-theme', 'light');
                updateThemeUI(false);
            } else {
                document.documentElement.classList.add('dark');
                localStorage.setItem('color-theme', 'dark');
                updateThemeUI(true);
            }
        }

        // Inicialización: Buscar botones y asignar eventos
        function initTheme() {
            const buttons = document.querySelectorAll('.theme-toggle-btn');
            
            buttons.forEach(btn => {
                // Limpiamos listeners viejos por si acaso
                btn.removeEventListener('click', handleToggleClick); 
                // Asignamos el nuevo
                btn.addEventListener('click', handleToggleClick);
            });

            // Sincronizar estado inicial al cargar la página
            const themeStored = localStorage.getItem('color-theme');
            const sysDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            
            const isDarkInitial = themeStored === 'dark' || (!themeStored && sysDark);
            
            if (isDarkInitial) {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
            
            updateThemeUI(isDarkInitial);
        }

        // Ejecutar inicialización
        initTheme();

        // Soporte para View Transitions de Astro (Navegación suave)
        document.addEventListener('astro:after-swap', () => {
            initTheme();
        });
    })();
</script>