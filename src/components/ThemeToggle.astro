<button type="button" class="theme-toggle-btn group relative inline-flex items-center justify-center p-2 rounded-full transition-all duration-300 focus:outline-none ring-1 ring-transparent focus:ring-siitec-light bg-gray-100 text-gray-500 hover:bg-gray-200 dark:bg-white/10 dark:text-gray-400 dark:hover:bg-white/20 dark:hover:text-white z-50">
    
    <svg class="sun-icon hidden w-5 h-5 transition-transform duration-500 group-hover:rotate-90" fill="currentColor" viewBox="0 0 20 20">
        <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" fill-rule="evenodd" clip-rule="evenodd"></path>
    </svg>
    
    <svg class="moon-icon hidden w-5 h-5 transition-transform duration-500 group-hover:-rotate-12" fill="currentColor" viewBox="0 0 20 20">
        <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
    </svg>

    <span class="sr-only">Cambiar tema</span>
</button>

<script is:inline>
    (function() {
        // Lógica central para cambiar el tema
        const toggleTheme = () => {
            const isDark = document.documentElement.classList.contains('dark');
            
            if (isDark) {
                document.documentElement.classList.remove('dark');
                localStorage.setItem('color-theme', 'light');
            } else {
                document.documentElement.classList.add('dark');
                localStorage.setItem('color-theme', 'dark');
            }
            // Actualizamos TODOS los iconos en la pantalla
            updateIcons();
        };

        // Función para pintar los iconos correctos (Sol o Luna)
        const updateIcons = () => {
            const isDark = document.documentElement.classList.contains('dark');
            const buttons = document.querySelectorAll('.theme-toggle-btn');
            
            buttons.forEach(btn => {
                const sun = btn.querySelector('.sun-icon');
                const moon = btn.querySelector('.moon-icon');
                
                if (isDark) {
                    sun.classList.remove('hidden');
                    moon.classList.add('hidden');
                } else {
                    sun.classList.add('hidden');
                    moon.classList.remove('hidden');
                }
            });
        };

        // Función Maestra de Inicialización
        const initThemeSystem = () => {
            // 1. Sincronizar estado inicial (Leer memoria o sistema)
            const themeStored = localStorage.getItem('color-theme');
            const sysDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            
            if (themeStored === 'dark' || (!themeStored && sysDark)) {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
            updateIcons();

            // 2. Asignar eventos a los botones (¡Aquí estaba el problema!)
            const buttons = document.querySelectorAll('.theme-toggle-btn');
            buttons.forEach(btn => {
                // Verificamos si este botón YA tiene el evento para no duplicarlo
                if (btn.dataset.init === "true") return;

                // Si es nuevo, le agregamos el click
                btn.addEventListener('click', (e) => {
                    e.preventDefault(); // Evita comportamientos raros en móvil
                    toggleTheme();
                });
                
                // Lo marcamos como "listo"
                btn.dataset.init = "true";
            });
        };

        // Ejecutar al cargar la página
        initThemeSystem();

        // Ejecutar cada vez que Astro cambia de página (View Transitions)
        document.addEventListener('astro:after-swap', initThemeSystem);
        
        // Ejecutar cuando Astro carga la página completa (seguridad extra)
        document.addEventListener('astro:page-load', initThemeSystem);
    })();
</script>