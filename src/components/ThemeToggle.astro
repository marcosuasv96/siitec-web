<button id="theme-toggle" type="button" class="group relative inline-flex items-center justify-center p-2 rounded-full transition-all duration-300 focus:outline-none ring-1 ring-transparent focus:ring-siitec-light bg-gray-100 text-gray-500 hover:bg-gray-200 dark:bg-white/10 dark:text-gray-400 dark:hover:bg-white/20 dark:hover:text-white">
    
    <svg id="theme-toggle-light-icon" class="hidden w-5 h-5 transition-transform duration-500 group-hover:rotate-90" fill="currentColor" viewBox="0 0 20 20">
        <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" fill-rule="evenodd" clip-rule="evenodd"></path>
    </svg>
    
    <svg id="theme-toggle-dark-icon" class="hidden w-5 h-5 transition-transform duration-500 group-hover:-rotate-12" fill="currentColor" viewBox="0 0 20 20">
        <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
    </svg>

    <span class="sr-only">Cambiar tema</span>
</button>

<script is:inline>
    // Este script se ejecuta en el navegador inmediatamente
    const themeToggleBtn = document.getElementById('theme-toggle');
    const lightIcon = document.getElementById('theme-toggle-light-icon');
    const darkIcon = document.getElementById('theme-toggle-dark-icon');

    // Función para verificar el tema actual
    const isDark = () => {
        return localStorage.getItem('color-theme') === 'dark' || 
        (!('color-theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches);
    };

    // Ajustar iconos según el estado inicial
    if (isDark()) {
        lightIcon.classList.remove('hidden');
        document.documentElement.classList.add('dark');
    } else {
        darkIcon.classList.remove('hidden');
        document.documentElement.classList.remove('dark');
    }

    // Evento Click
    if (themeToggleBtn) {
        themeToggleBtn.addEventListener('click', function() {
            // Alternar iconos
            lightIcon.classList.toggle('hidden');
            darkIcon.classList.toggle('hidden');

            // Si está oscuro, cambiar a claro
            if (document.documentElement.classList.contains('dark')) {
                document.documentElement.classList.remove('dark');
                localStorage.setItem('color-theme', 'light');
            } else {
                // Si está claro, cambiar a oscuro
                document.documentElement.classList.add('dark');
                localStorage.setItem('color-theme', 'dark');
            }
        });
    }
</script>