<button type="button" class="theme-toggle-btn group relative inline-flex items-center justify-center p-2 rounded-full transition-all duration-300 focus:outline-none ring-1 ring-transparent focus:ring-siitec-light bg-gray-100 text-gray-500 hover:bg-gray-200 dark:bg-white/10 dark:text-gray-400 dark:hover:bg-white/20 dark:hover:text-white">
    
    <svg class="sun-icon hidden w-5 h-5 transition-transform duration-500 group-hover:rotate-90" fill="currentColor" viewBox="0 0 20 20">
        <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" fill-rule="evenodd" clip-rule="evenodd"></path>
    </svg>
    
    <svg class="moon-icon hidden w-5 h-5 transition-transform duration-500 group-hover:-rotate-12" fill="currentColor" viewBox="0 0 20 20">
        <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
    </svg>

    <span class="sr-only">Cambiar tema</span>
</button>

<script is:inline>
    // Usamos una función autoejecutable para aislar el ámbito
    (function() {
        // Función para actualizar TODOS los botones a la vez
        function updateThemeUI(isDark) {
            const buttons = document.querySelectorAll('.theme-toggle-btn');
            
            buttons.forEach(btn => {
                const sunIcon = btn.querySelector('.sun-icon');
                const moonIcon = btn.querySelector('.moon-icon');

                if (isDark) {
                    sunIcon.classList.remove('hidden');
                    moonIcon.classList.add('hidden');
                } else {
                    sunIcon.classList.add('hidden');
                    moonIcon.classList.remove('hidden');
                }
            });
        }

        // Lógica principal de toggle
        function handleToggleClick() {
            // Verificar estado actual
            const isDark = document.documentElement.classList.contains('dark');
            
            // Invertir estado
            if (isDark) {
                document.documentElement.classList.remove('dark');
                localStorage.setItem('color-theme', 'light');
                updateThemeUI(false);
            } else {
                document.documentElement.classList.add('dark');
                localStorage.setItem('color-theme', 'dark');
                updateThemeUI(true);
            }
        }

        // Inicialización
        // 1. Asignar eventos a TODOS los botones (Móvil y Escritorio)
        const buttons = document.querySelectorAll('.theme-toggle-btn');
        buttons.forEach(btn => {
            // Removemos listeners previos para evitar duplicados si Astro re-renderiza
            btn.removeEventListener('click', handleToggleClick); 
            btn.addEventListener('click', handleToggleClick);
        });

        // 2. Sincronizar estado inicial
        const themeStored = localStorage.getItem('color-theme');
        const sysDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        
        const isDarkInitial = themeStored === 'dark' || (!themeStored && sysDark);
        
        // Asegurar que el HTML tenga la clase correcta
        if (isDarkInitial) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }
        
        // Actualizar iconos
        updateThemeUI(isDarkInitial);
    })();

    // Soporte para transiciones de Astro (View Transitions)
    document.addEventListener('astro:after-swap', () => {
        // Re-ejecutar la lógica al navegar
        const buttons = document.querySelectorAll('.theme-toggle-btn');
        buttons.forEach(btn => {
            // Necesitamos re-definir la función click aquí o extraerla globalmente
            // Para simplicidad, leemos el estado del HTML que Astro preserva
            btn.addEventListener('click', () => {
                const isDark = document.documentElement.classList.contains('dark');
                if (isDark) {
                    document.documentElement.classList.remove('dark');
                    localStorage.setItem('color-theme', 'light');
                    // Actualizar UI manualmente aquí
                    document.querySelectorAll('.theme-toggle-btn').forEach(b => {
                        b.querySelector('.sun-icon').classList.add('hidden');
                        b.querySelector('.moon-icon').classList.remove('hidden');
                    });
                } else {
                    document.documentElement.classList.add('dark');
                    localStorage.setItem('color-theme', 'dark');
                    document.querySelectorAll('.theme-toggle-btn').forEach(b => {
                        b.querySelector('.sun-icon').classList.remove('hidden');
                        b.querySelector('.moon-icon').classList.add('hidden');
                    });
                }
            });
            
            // Sincronizar iconos al cargar nueva página
            const isDark = document.documentElement.classList.contains('dark');
            const sunIcon = btn.querySelector('.sun-icon');
            const moonIcon = btn.querySelector('.moon-icon');
            if (isDark) {
                sunIcon.classList.remove('hidden');
                moonIcon.classList.add('hidden');
            } else {
                sunIcon.classList.add('hidden');
                moonIcon.classList.remove('hidden');
            }
        });
    });
</script>