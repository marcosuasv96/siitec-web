---
// src/components/Navbar.astro
import ThemeToggle from './ThemeToggle.astro';

const navItems = [
  { name: "Inicio", href: "/" },
  { name: "Nosotros", href: "/nosotros" },
  { name: "Servicios", href: "/servicios" },
  { name: "Productos", href: "/catalogo" },
  { name: "Contacto", href: "/contacto" },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 py-4 px-4 md:px-8 transition-all duration-300" id="navbar">
    
    <div class="max-w-7xl mx-auto bg-white/90 dark:bg-siitec-dark/90 backdrop-blur-md border border-gray-200 dark:border-white/10 rounded-2xl shadow-[0_8px_32px_0_rgba(0,0,0,0.1)] dark:shadow-[0_8px_32px_0_rgba(0,0,0,0.36)] relative overflow-hidden transition-colors duration-300">
        
        <div class="absolute top-0 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-siitec-light/50 to-transparent"></div>

        <div class="px-6 py-3 flex justify-between items-center">
            
            <a href="/" class="flex items-center gap-3 group">
                <div class="relative">
                    <div class="absolute inset-0 bg-siitec-light blur-xl opacity-0 dark:opacity-30 group-hover:dark:opacity-50 transition duration-500"></div>
                    
                    <div class="relative z-10">
                        <img class="h-8 md:h-10 w-auto object-contain dark:brightness-150 dark:contrast-125 transition-all duration-300" src="/logo.png" alt="Siitec Smart" />
                    </div>
                </div>
                
                <div class="hidden sm:flex flex-col ml-2">
                    <span class="font-bold text-lg text-siitec-dark dark:text-white tracking-wide leading-none group-hover:text-siitec-light transition duration-300">SIITEC</span>
                    <span class="text-[0.55rem] uppercase tracking-[0.2em] text-siitec-accent font-bold">Smart Tech</span>
                </div>
            </a>

            <div class="hidden lg:flex items-center space-x-1">
                {navItems.map(item => (
                    <a href={item.href} class="relative px-4 py-2 text-sm font-medium text-gray-600 dark:text-gray-300 hover:text-siitec-dark dark:hover:text-white transition-colors duration-300 group">
                        {item.name}
                        <span class="absolute bottom-0 left-0 w-0 h-[2px] bg-siitec-dark dark:bg-siitec-accent transition-all duration-300 group-hover:w-full"></span>
                    </a>
                ))}
            </div>

            <div class="hidden lg:flex items-center gap-4">
                
                <ThemeToggle />

                <a href="https://wa.me/523300000000" target="_blank" class="relative inline-flex items-center justify-center px-5 py-2 overflow-hidden font-bold text-white rounded-lg group text-sm shadow-md hover:shadow-lg transition-all">
                    <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-siitec-dark to-siitec-light"></span>
                    <span class="relative flex items-center gap-2">
                        WhatsApp
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/></svg>
                    </span>
                </a>
            </div>

            <div class="lg:hidden flex items-center gap-4">
                <ThemeToggle />
                
                <button id="mobile-menu-btn" class="text-gray-600 dark:text-gray-300 hover:text-siitec-dark dark:hover:text-siitec-accent focus:outline-none p-2">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <div id="mobile-menu" class="hidden absolute top-24 left-4 right-4 bg-white/95 dark:bg-siitec-dark/95 backdrop-blur-xl border border-gray-200 dark:border-white/10 rounded-2xl p-4 shadow-2xl flex-col space-y-2 z-40 transition-colors duration-300">
        {navItems.map(item => (
            <a href={item.href} class="block px-4 py-3 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-siitec-accent dark:hover:text-siitec-dark rounded-lg transition font-medium">
                {item.name}
            </a>
        ))}
    </div>
</nav>

<script>
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');

    if (btn && menu) {
        btn.addEventListener('click', () => {
            menu.classList.toggle('hidden');
        });
    }
</script>