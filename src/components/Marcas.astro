---
// src/components/Marcas.astro

// Lista completa de marcas
const marcas = [
  "CONTPAQi", "Hikvision", "Dahua", "HiLook", "Sony", "Bose", 
  "Lenovo", "HP", "Dell", "Samsung", "Microsoft", "Cisco", "Kaspersky"
];

// Duplicamos la lista varias veces para asegurar que el carrusel sea infinito sin cortes
const marcasInfinitas = [...marcas, ...marcas, ...marcas];
---

<section class="py-16 bg-white relative overflow-hidden border-b border-siitec-light/10">
    
    <div class="absolute top-0 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-siitec-light/40 to-transparent"></div>
    
    <div class="absolute inset-0 bg-[url('/grid.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))] opacity-5"></div>

    <div class="max-w-full mx-auto relative z-10">
        <p class="text-center text-siitec-dark/50 text-sm font-bold uppercase tracking-[0.3em] mb-12 flex items-center justify-center gap-4 after:h-[1px] after:w-20 after:bg-siitec-dark/20 before:h-[1px] before:w-20 before:bg-siitec-dark/20">
            Tecnología y Licenciamiento Certificado
        </p>
        
        <div class="relative w-full overflow-hidden mask-linear-gradient">
            
            <div class="flex items-center gap-16 md:gap-24 animate-scroll whitespace-nowrap w-max">
                {marcasInfinitas.map(marca => (
                    <div class="group cursor-default select-none relative px-6 py-4 rounded-xl transition-all duration-300">
                        
                        <div class="absolute inset-0 bg-siitec-light/10 blur-xl rounded-full opacity-0 group-hover:opacity-100 transition duration-500"></div>
                        
                        <span class="relative z-10 text-3xl md:text-5xl font-bold text-gray-300 group-hover:text-siitec-dark transition-colors duration-300 tracking-tight font-mono">
                            {marca}
                        </span>
                    </div>
                ))}
            </div>

            <div class="absolute inset-y-0 left-0 w-20 md:w-40 bg-gradient-to-r from-white to-transparent z-20"></div>
            <div class="absolute inset-y-0 right-0 w-20 md:w-40 bg-gradient-to-l from-white to-transparent z-20"></div>
        </div>
    </div>
</section>

<style>
    /* Animación del carrusel */
    @keyframes scroll {
        0% { transform: translateX(0); }
        100% { transform: translateX(-33.33%); } /* Se mueve 1/3 porque triplicamos la lista */
    }

    .animate-scroll {
        animation: scroll 40s linear infinite; /* 40s para que sea suave, ajusta si quieres más velocidad */
    }
    
    /* Pausar animación al pasar el mouse (opcional, para que el usuario pueda leer) */
    .animate-scroll:hover {
        animation-play-state: paused;
    }
</style>