<section class="relative py-24 px-4 overflow-hidden bg-gray-50 dark:bg-white transition-colors duration-300">
    
    <div class="absolute inset-0 bg-gray-50 dark:bg-[#0B1221] mt-20 transition-colors duration-300"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-gray-50 via-gray-50 to-gray-100 dark:from-white dark:via-white dark:to-[#0B1221] opacity-0 dark:opacity-100 transition-opacity duration-300"></div>
    
    <div class="relative z-10 max-w-6xl mx-auto">
        
        <div class="absolute -inset-1 bg-gradient-to-r from-siitec-light to-siitec-accent rounded-[2.5rem] blur opacity-20 dark:opacity-30 transition-opacity duration-300"></div>
        
        <div class="relative bg-white dark:bg-[#0F172A] border border-gray-100 dark:border-siitec-light/20 rounded-[2rem] p-8 md:p-16 overflow-hidden shadow-xl dark:shadow-2xl flex flex-col md:flex-row items-center justify-between gap-10 transition-colors duration-300">
            
